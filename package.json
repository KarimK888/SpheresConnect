{
  "name": "spheresconnect-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "node scripts/run-supabase-migration.js up",
    "db:reset": "node scripts/run-supabase-migration.js reset",
    "db:studio": "node scripts/run-supabase-migration.js studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "pnpm lint --filter=web -- --fix",
    "*.{json,md,css,scss}": "prettier --write"
  }
}
